<h1>Editing track</h1>
 
<%= link_to 'Back', track_path %>

<%= form_for :track, url: track_path(@track), method: :patch do |f| %>
  <div class="form-group">
    <label for="exampleInputEmail1">Title</label>
    <%= f.text_field :title, id:'exampleInputEmail1', class:'form-control' %>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Genre</label>
    <%= f.text_field :genre, id:'exampleInputEmail1', class:'form-control' %>
  </div>
  <div class="form-group">
    cover : <%= f.file_field :cover %>
  </div>
  <div class="form-group">
    file : <%= f.file_field :file %>
  </div>
  <div class="form-group" >
    <img data-src="holder.js/140x140" class="img-thumbnail" alt="140x140" style="width: 140px; height: 140px;" src="<%= @track.cover%>" placeholder="<%= @track.cover %>">
  </div>
  <audio controls>
    <source src="<%= @track.file%>" type="audio/mpeg" />
    <a href="<%= @track.file%>">horse</a>
  </audio>
  <%= f.submit class:'btn btn-default'%>
<% end %>

