<h1>Editing album</h1>
 
<%= link_to 'Back', album_path %>

<%= form_for :album,url: album_path(@album),  method: :patch do |f| %>
  <div class="form-group">
    <label for="exampleInputEmail1">Title</label>
    <%= f.text_field :title, id:'exampleInputEmail1', class:'form-control' %>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Genre</label>
    <%= f.text_field :genre, id:'exampleInputEmail1', class:'form-control' %>
  </div>
  <div class="form-group">
    cover : <%= f.file_field :image %>
  </div>
  <div class="form-group" >
    <img data-src="holder.js/140x140" class="img-thumbnail" alt="140x140" style="width: 140px; height: 140px;" src="<%= @album.image%>" placeholder="<%= @album.image %>">
  </div>
  <%= f.submit class:'btn btn-default'%>
<% end %>